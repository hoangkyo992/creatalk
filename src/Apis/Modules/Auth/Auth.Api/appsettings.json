{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "Auth.Api": "Information"
      }
    },
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:HH:mm:ss.fff zzz} [{Level}] [{RequestId}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/Auth_Api-.txt",
          "outputTemplate": "{Timestamp:HH:mm:ss.fff zzz} [{Level}] [{RequestId}] [{ClientIP}] {SourceContext} {Message}{NewLine}{Exception}",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ProductVersion": "1.0.1.0",
  "ServiceName": "Auth.Api",
  "OverrideResponseStatusCode": true,
  "IncludeInnerException": true,
  "MaxFileSize": 5242880, // 5MB
  "Language": {
    "DefaultLanguage": "en-US",
    "SupportedLanguages": "vi-VN;en-US"
  },
  "AuthIdentity": {
    "Issuer": "auth-local",
    "Audience": "auth_api",
    "Expiration": 1440,
    "SigningCredential": "+iwcfvB7wL0X4OztHjs93Oc9VZB284Zt0/4yCYgazCXlqgIIvvn94d5CpvR617U3",
    "MaxActiveSession": 1,
    "MaxFailureSigninAttempt": 5,
    "FailureLockedIn": 2
  },
  "Cache": {
    "Redis": {
      "Configurations": {
        "AuthCache": {
          "Host": "127.0.0.1",
          "Port": 6379,
          "Database": 15
        }
      },
      "Distributed": {
        "UseRedisCache": false,
        "Host": "",
        "Port": 6379,
        "User": null,
        "Password": null,
        "UseSsl": false,
        "CertificatePath": null,
        "DefaultDatabase": 1,
        "Connection": ""
      }
    }
  },
  "EPPlus": {
    "ExcelPackage": {
      "Compatibility": {
        "IsWorksheets1Based": true
      },
      "LicenseContext": "NonCommercial"
    }
  }
}