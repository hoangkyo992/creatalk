{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "Api.Api": "Information"
      }
    },
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:HH:mm:ss.fff zzz} [{Level}] [{RequestId}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/Api-.txt",
          "outputTemplate": "{Timestamp:HH:mm:ss.fff zzz} [{Level}] [{RequestId}] [{ClientIP}] {SourceContext} {Message}{NewLine}{Exception}",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ProductVersion": "1.0.1.0",
  "ServiceName": "Creatalk.Api",
  "OverrideResponseStatusCode": true,
  "IncludeInnerException": true,
  "MaxFileSize": 5242880, // 5MB
  "ThrowIfFileNameExists": true,
  "Language": {
    "DefaultLanguage": "en-US",
    "SupportedLanguages": "vi-VN;en-US"
  },
  "AuthIdentity": {
    "Issuer": "auth-local",
    "Audience": "auth_api",
    "Expiration": 1440,
    "SigningCredential": "+iwcfvB7wL0X4OztHjs93Oc9VZB281111/4yCYgazCXlqgIIvvn94d5Cpv222222",
    "MaxActiveSession": 1,
    "MaxFailureSigninAttempt": 5,
    "FailureLockedIn": 2
  },
  "CdnServer": {
    "PublicPath": "https://localhost:8188/media"
  },
  "Cache": {
    "Redis": {
      "Configurations": {
        "AuthCache": {
          "Host": "127.0.0.1",
          "Port": 6379,
          "Database": 15
        }
      },
      "Distributed": {
        "UseRedisCache": false,
        "Host": "",
        "Port": 6379,
        "User": null,
        "Password": null,
        "UseSsl": false,
        "CertificatePath": null,
        "DefaultDatabase": 1,
        "Connection": ""
      }
    }
  },
  "EPPlus": {
    "ExcelPackage": {
      "Compatibility": {
        "IsWorksheets1Based": true
      },
      "LicenseContext": "NonCommercial"
    }
  },
  "RateLimits": {
    "PermitLimit": 100,
    "Window": 6,
    "ReplenishmentPeriod": 1,
    "QueueLimit": 0,
    "SegmentsPerWindow": 2,
    "TokenLimit": 0, // Set value > 0 to enable global limiter
    "TokensPerPeriod": 2,
    "AutoReplenishment": true,
    "Policies": {
      "IdentityFixed": {
        "PermitLimit": 30,
        "Window": 6,
        "QueueLimit": 0,
        "AutoReplenishment": true
      },
      "IdentityConcurrency": {
        "PermitLimit": 10,
        "QueueLimit": 0
      },
      "IdentitySliding": {
        "PermitLimit": 100,
        "Window": 6,
        "QueueLimit": 0,
        "SegmentsPerWindow": 2
      },
      "IdentityTokenBucket": {
        "TokenLimit": 20,
        "QueueLimit": 0,
        "ReplenishmentPeriod": 1,
        "TokensPerPeriod": 2,
        "AutoReplenishment": true
      },
      "IpAddressFixed": {
        "PermitLimit": 200,
        "Window": 6,
        "QueueLimit": 20,
        "AutoReplenishment": true
      },
      "IpAddressConcurrency": {
        "PermitLimit": 100,
        "QueueLimit": 0
      },
      "IpAddressSliding": {
        "PermitLimit": 100,
        "Window": 6,
        "QueueLimit": 0,
        "SegmentsPerWindow": 2
      },
      "IpAddressTokenBucket": {
        "TokenLimit": 20,
        "QueueLimit": 0,
        "ReplenishmentPeriod": 1,
        "TokensPerPeriod": 2,
        "AutoReplenishment": true
      }
    }
  }
}