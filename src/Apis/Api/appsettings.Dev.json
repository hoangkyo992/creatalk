{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "Api": "Information"
      }
    },
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:HH:mm:ss.fff zzz} [{Level}] [{RequestId}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/Api-.txt",
          "outputTemplate": "{Timestamp:HH:mm:ss.fff zzz} [{Level}] [{RequestId}] [{ClientIP}] {SourceContext} {Message}{NewLine}{Exception}",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ProductVersion": "1.0.1.0",
  "ServiceName": "Creatalk.Api",
  "OverrideResponseStatusCode": true,
  "IncludeInnerException": true,
  "MaxFileSize": 5242880, // 5MB
  "Language": {
    "DefaultLanguage": "en-US",
    "SupportedLanguages": "vi-VN;en-US"
  },
  "EPPlus": {
    "ExcelPackage": {
      "Compatibility": {
        "IsWorksheets1Based": true
      },
      "LicenseContext": "NonCommercial"
    }
  },
  "DetailedErrors": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "AppDbContext": "Host=127.0.0.1;Database=creatalk;Username=postgres;Password=123456x@X"
  },
  "DbContext": {
    "UseOnlyInMemoryDatabase": false,
    "AppDbContext": {
      "Version": "16.0",
      "EnableSensitiveDataLogging": true
    }
  },
  "Cache": {
    "Redis": {
      "Configurations": {
        "DataCache": {
          "Host": "127.0.0.1",
          "Port": 6379,
          "Database": 12
        }
      },
      "Distributed": {
        "UseRedisCache": true,
        "Host": "127.0.0.1",
        "Port": 6379,
        "User": null,
        "Password": null,
        "UseSsl": false,
        "CertificatePath": null,
        "DefaultDatabase": 15,
        "Connection": "127.0.0.1:6379,defaultDatabase=15"
      }
    }
  }
}