{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "Api.Api": "Information"
      }
    },
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:HH:mm:ss.fff zzz} [{Level}] [{RequestId}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/Api-.txt",
          "outputTemplate": "{Timestamp:HH:mm:ss.fff zzz} [{Level}] [{RequestId}] [{ClientIP}] {SourceContext} {Message}{NewLine}{Exception}",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ProductVersion": "1.0.1.0",
  "ServiceName": "Creatalk.Api",
  "OverrideResponseStatusCode": true,
  "IncludeInnerException": true,
  "MaxFileSize": 5242880, // 5MB
  "Language": {
    "DefaultLanguage": "en-US",
    "SupportedLanguages": "vi-VN;en-US"
  },
  "AuthIdentity": {
    "Issuer": "auth-creatalk-prod",
    "Audience": "auth_creatalk_api",
    "Expiration": 1440,
    "SigningCredential": "+i4Oz7wLc9VZBtHjs93wcfvB280XO4Zt0/vvn94gazCXlq617d5CpvRU34yCYgII",
    "MaxActiveSession": 1,
    "MaxFailureSigninAttempt": 5,
    "FailureLockedIn": 2
  },
  "CdnServer": {
    "PublicPath": "https://creatalk-cdn.vikiworld.vn/media"
  },
  "Cors": {
    "PolicyName": "Vikiworld",
    "Origins": "https://*.vikiworld.vn,http://*.vikiworld.vn,https://banknote-v2.vercel.app,http://localhost:1945"
  },
  "DetailedErrors": true,
  "ConnectionStrings": {
    "AppDbContext": "Host=127.0.0.1;Database=creatalk.dev;Username=postgres;Password=Hunghd2023@123"
  },
  "DbContext": {
    "UseOnlyInMemoryDatabase": false,
    "AppDbContext": {
      "Version": "16.0",
      "EnableSensitiveDataLogging": false
    }
  },
  "Cache": {
    "Redis": {
      "Configurations": {
        "AuthCache": {
          "Host": "127.0.0.1",
          "Port": 6379,
          "Database": 15
        }
      },
      "Distributed": {
        "UseRedisCache": true,
        "Host": "127.0.0.1",
        "Port": 6379,
        "User": null,
        "Password": null,
        "UseSsl": false,
        "CertificatePath": null,
        "DefaultDatabase": 1,
        "Connection": "127.0.0.1:6379"
      }
    }
  },
  "EPPlus": {
    "ExcelPackage": {
      "Compatibility": {
        "IsWorksheets1Based": true
      },
      "LicenseContext": "NonCommercial"
    }
  }
}